<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BaseMealActivity">

    <ImageView
        android:id="@+id/customer_meal_id"
        android:layout_width="match_parent"
        android:src="@drawable/burger"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:outlineAmbientShadowColor="@color/colorPrimaryDark"
        android:layout_height="250dp"/>
    <TextView
        android:id="@+id/customer_meal_name"
        android:text="NAME"
        android:textSize="40dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/customer_meal_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/customer_meal_category"
        android:text="Category"
        android:textSize="20dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/customer_meal_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/customer_meal_description"
        android:text="This is the description of a specific meal"
        android:textSize="20dp"
        android:layout_marginTop="10dp"
        android:textAlignment="center"
        android:lines="5"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/customer_meal_category"
        android:layout_width="match_parent"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:gravity="center_vertical|right"
        android:layout_height="wrap_content"/>


    <LinearLayout
        android:id="@+id/text_holer"
        android:layout_below="@+id/customer_meal_description"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/static_euro"
            android:layout_below="@+id/customer_meal_description"
            android:text="â‚¬ "
            android:textSize="20dp"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/customer_meal_price"
            android:layout_below="@+id/customer_meal_description"
            android:text="30"
            android:textSize="20dp"
            android:layout_toRightOf="@+id/static_euro"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <Button
        android:text="Go back"
        android:layout_marginTop="15dp"
        android:paddingLeft="40dp"
        android:paddingRight="40dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/text_holer"
        android:id="@+id/add_meal_order"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</RelativeLayout>