<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OrderActivity">
    <TextView
        android:id="@+id/orderid"
        android:text="ID:"
        android:textSize="30sp"
        android:paddingLeft="15dp"
        android:paddingTop="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/orderidtext"
        android:layout_toRightOf="@+id/orderid"
        android:text="Id"
        android:textSize="30sp"
        android:paddingLeft="15dp"
        android:paddingTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/ordercustomername"
        android:paddingTop="15dp"
        android:paddingRight="15dp"
        android:layout_alignParentRight="true"
        android:textSize="30sp"
        android:text="Customer name"
        android:layout_width="wrap_content"
        android:layout_marginBottom="15dp"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/orderprice"
        android:layout_marginTop="10dp"
        android:textSize="40sp"
        android:paddingRight="15dp"
        android:paddingLeft="15dp"
        android:gravity="center"
        android:layout_below="@+id/orderid"
        android:text="Price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/orderrecyclerview"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_above="@+id/completeorderbtnid"
        android:layout_below="@+id/orderprice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/completeorderbtnid"
        android:layout_marginTop="15dp"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:text="Completer order"
        android:layout_width="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_height="wrap_content"/>


</RelativeLayout>