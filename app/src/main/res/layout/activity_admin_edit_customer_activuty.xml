<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdminEditCustomerActivuty">

    <ImageView
        android:id="@+id/adedcustimg_id"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="100dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/user2"/>


    <TextView
        android:id="@+id/adedcustname_id"
        android:paddingLeft="30dp"
        android:layout_below="@+id/adedcustimg_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name:"
        android:textSize="30sp"/>
    <TextView
        android:id="@+id/adedcustname_input_id"
        android:paddingLeft="30dp"
        android:layout_below="@+id/adedcustimg_id"
        android:paddingRight="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="nameinput"
        android:layout_alignParentRight="true"
        android:textSize="30sp"/>

    <TextView
        android:id="@+id/adedcusttel_id"
        android:paddingLeft="30dp"
        android:layout_below="@+id/adedcustname_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tel.:"
        android:textSize="30sp"/>

    <TextView
        android:id="@+id/adedcusttel_input_id"
        android:paddingLeft="30dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="30dp"
        android:layout_below="@+id/adedcustname_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="7456834"
        android:textSize="30sp"/>

    <TextView
        android:id="@+id/adedcustorder_id"
        android:paddingLeft="30dp"
        android:layout_below="@+id/adedcusttel_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Orders:"
        android:textSize="30sp"/>
    <TextView
        android:id="@+id/adedcustorder_input_id"
        android:paddingLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/adedcusttel_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="99"
        android:textSize="30sp"/>

    <Button
        android:id="@+id/adecustdelete_customer_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/adedcustorder_id"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        android:text="Delete Customer"/>





</RelativeLayout>